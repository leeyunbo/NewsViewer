<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="news"
                  type="com.leeyunbo.myrealtrip.dataclass.News"/>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/item_img"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="@{news.title}"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_title_tv"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/item_img"
                app:layout_constraintStart_toEndOf="@+id/item_img"/>
        <TextView
                android:text="@{news.content}"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_content_tv"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="@+id/item_title_tv"
                app:layout_constraintTop_toBottomOf="@+id/item_title_tv"/>
        <TextView
                android:text="@{news.keyword[0]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_keyword_tv1"
                app:layout_constraintStart_toStartOf="@id/item_title_tv"
                app:layout_constraintBottom_toBottomOf="@id/item_img"/>
        <TextView
                android:text="@{news.keyword[1]}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_keyword_tv2"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@id/item_keyword_tv1"
                app:layout_constraintBottom_toBottomOf="@id/item_keyword_tv1"/>
        <TextView
                android:text="@{news.keyword[2]}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_keyword_tv3"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@id/item_keyword_tv2"
                app:layout_constraintBottom_toBottomOf="@id/item_keyword_tv2"
       />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>