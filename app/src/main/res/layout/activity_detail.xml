<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="items"
                  type="com.leeyunbo.myrealtrip.data.News"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            tools:context=".DetailActivity">
        <TextView
                android:id="@+id/detail_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{items.title}"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
                android:id="@+id/detail_keyword_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_border"
                app:bind_keyword="@{items.keywords}"
                app:keyword_position="@{1}"
                app:layout_constraintLeft_toLeftOf="@id/detail_title_tv"
                app:layout_constraintTop_toBottomOf="@id/detail_title_tv"/>
        <TextView
                android:id="@+id/detail_keyword_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/linear_border"
                app:bind_keyword="@{items.keywords}"
                app:keyword_position="@{2}"
                app:layout_constraintLeft_toRightOf="@id/detail_keyword_tv1"
                app:layout_constraintTop_toBottomOf="@id/detail_title_tv"/>
        <TextView
                android:id="@+id/detail_keyword_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/linear_border"
                app:bind_keyword="@{items.keywords}"
                app:keyword_position="@{3}"
                app:layout_constraintLeft_toRightOf="@id/detail_keyword_tv2"
                app:layout_constraintTop_toBottomOf="@id/detail_title_tv"
          />
        <WebView
                android:id="@+id/detail_wv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_keyword_tv1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:bind_url="@{items.link}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>